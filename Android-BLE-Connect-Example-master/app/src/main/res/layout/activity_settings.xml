<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="@color/colorBackgroundLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shadow"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="120dp"
                android:layout_height="50dp"
              
               
                android:text="WiFi Name"
               />
            <EditText
                android:id="@+id/editText2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="joyeta_wifi"
                 />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:paddingLeft="10dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="120dp"
        android:layout_height="50dp"
       
        android:text="WiFi Password"
       />
        <EditText
            android:id="@+id/editText3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="12345678"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:paddingLeft="10dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Ring Cycle"
       />

   

    

    <EditText
        android:id="@+id/editText4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="1"
       />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:gravity="center"
        android:orientation="vertical" >
<android.support.v4.widget.Space
    android:layout_width="wrap_content"
    android:layout_height="20dp" />
    <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@color/connectedColor"
       android:text="Save"
      android:onClick="onClickSave"
       android:textColor="@android:color/white"/>
    </LinearLayout>
        
    </LinearLayout>
</RelativeLayout>